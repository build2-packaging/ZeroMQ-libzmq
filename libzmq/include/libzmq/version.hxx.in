#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBZMQ_VERSION       $libzmq.version.project_number$ULL
#define LIBZMQ_VERSION_STR   "$libzmq.version.project$"
#define LIBZMQ_VERSION_ID    "$libzmq.version.project_id$"
#define LIBZMQ_VERSION_FULL  "$libzmq.version$"

#define LIBZMQ_VERSION_MAJOR $libzmq.version.major$
#define LIBZMQ_VERSION_MINOR $libzmq.version.minor$
#define LIBZMQ_VERSION_PATCH $libzmq.version.patch$

#define LIBZMQ_PRE_RELEASE   $libzmq.version.pre_release$

#define LIBZMQ_SNAPSHOT_SN   $libzmq.version.snapshot_sn$ULL
#define LIBZMQ_SNAPSHOT_ID   "$libzmq.version.snapshot_id$"
